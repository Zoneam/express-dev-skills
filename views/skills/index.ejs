<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel='stylesheet' href='/stylesheets/style.css' />
    <title>Document</title>
</head>
<body>
    <h1>Skills</h1>
    <div class="list-group">    
            <% skills.forEach(function(skill) { %>
                <a href="/skills/<%= skill.id %>" class="text-center list-group-item list-group-item-action <%= (skill.skillLevel <= 5) ? 'list-group-item-danger' : (skill.skillLevel > 5 && skill.skillLevel < 8)? 'list-group-item-warning' : 'list-group-item-success' %>">
                    <%= skill.skill %> <h6>Skill Level: <%= skill.skillLevel %></h6></a>
            <% }); %>
    </div>
</body>
</html>